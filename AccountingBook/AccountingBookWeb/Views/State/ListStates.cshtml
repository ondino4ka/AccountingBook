@model IEnumerable<AccountingBookCommon.Models.State>

@{
    ViewBag.Title = "ListStates";
}

<h2>List States</h2>
<p>
    @Html.ActionLink("Create New", "AddEditState")
</p>
@if (Model != null)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StateName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StateName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "AddEditState", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteState", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
        <p>Server is not available. Try later</p>
}
