@model IEnumerable<AccountingBookCommon.Category>

<link href="~/Content/sidebar.css" rel="stylesheet" />

<div id="sidebar">
    <h2>Categories</h2>
    <hr />
    @if (Model != null)
    {
        if (Model.Any())
        {
            @DisplayTree(Model.Where(x => x.Pid == null).OrderBy(x => x.Name));
            @helper DisplayTree(IEnumerable<AccountingBookCommon.Category> categories)
            {
                <ul>
                    @foreach (var category in categories)
                       {
                         <li>
                            <a id="@category.Id" onclick="getSubjectsByCategoryId(@category.Id, '@category.Name')">@category.Name</a>
                                @{
                                    var children = Model.Where(x => x.Pid == category.Id).OrderBy(x => x.Name).ToList();
                                    if (children.Any())
                                    {
                                     @DisplayTree(children);
                                    }
                                 }
                        </li>
                        }
                 </ul>
             }
        }
        else
        {
            <ul>Категорий нет</ul>
        }
    }
    else
    {
        <ul>@ViewBag.Error</ul>     
    }
</div>