@model AccountingBookCommon.Models.SubjectDetails

@{
    ViewBag.Title = "DeleteSubject";
}

@if (Model != null)
{
    <h2>Delete Subject</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>@Model.Name</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.InventoryNumber)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InventoryNumber)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Location)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Photo)
            </dt>
            
            <dd>
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="/Subject/GetImageSubject/?name=@Model.Photo" alt="Image">
                }
                else
                {
                    <p>-</p>
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Photo)
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to Search", "SearchSubjects")
            </div>
        }
    </div>
}
else
{
    <p>Server is not available. Try later</p>
}
