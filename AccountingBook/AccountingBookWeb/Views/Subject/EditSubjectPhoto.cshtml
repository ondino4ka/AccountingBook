    $("#deleteImage").click(function () {
        console.log($(this).val())
        if ($(this).prop('checked')) {
            $("img").fadeTo(500, 0.3);
        }
        else {
            $("img").fadeTo(500, 1);
        }
    });
    document.getElementById('upload').addEventListener('change', checkFile);

</script>
