@model IEnumerable<AccountingBookCommon.Models.Location>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Edit", "AddEditLocation", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteLocation", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>Now the server is unavailable.Try later</p>
}